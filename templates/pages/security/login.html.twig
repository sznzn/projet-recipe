{% extends 'base.html.twig' %}

{% block title %}EasyRecipe - Connexion{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Formulaire de connextion</h1>

        {% if error %}
            <div class='alert alert-danger mt-4'>
                {{ error.messageKey|trans(error.messageData, 'security')}}
            </div>
        {% endif %}


        <form action="{{ path('security.login') }}" method="post">
            <div>
                <label for="username" class="form-label mt-4">Adresse Email</label>
                <input type="email" class="form-control" id="username aria-describedby="emailHelp" placeholder="exemple@votremail.com" name="_username" value="{{last_username}}">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div>
                <label for="password" class="form-label mt-4">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="_password" placeholder="Votre mot de passe" autocomplete="off">
            </div>
            <button type="submit" class="btn btn-primary mt-4">Se connecter</button>
        </form>
    </div>
    
{% endblock %}


